<div class='row align-items-center my-3'>
  <div class='title col-6'>
    {{#ifCond route 'order'}}
      <h1>Order</h1>
    {{/ifCond}}

    {{#ifCond route 'customer'}}
      <h1>Customer</h1>
    {{/ifCond}}

    {{#ifCond route 'product'}}
      <div class='d-flex align-items-center gap-5'>
        <h1>Product</h1>
        <a href='/admin/product/new' class='btn new-product-btn'><i
            class='bi bi-plus'
          ></i>New Product</a>
      </div>
    {{/ifCond}}

    {{#ifCond route 'category'}}
      <h1>Category</h1>
    {{/ifCond}}
  </div>
  {{! Control group }}
  <div class='d-flex justify-content-around control-group col-6'>
    <div class='search-box d-flex align-items-center gap-2 ps-3 flex-fill'>
      <i class='bi bi-search'></i>
      <input
        class='search-input'
        type='text'

        {{#ifCond route 'order'}}
        placeholder='Search Order ID or Customer ID'
        {{/ifCond}}

        {{#ifCond route 'customer'}}
        placeholder='Search Customer ID/Name'
        {{/ifCond}}

        {{#ifCond route 'product'}}
        placeholder='Search Product ID/Name/Category'
        {{/ifCond}}

        {{#ifCond route 'category'}}
        placeholder='Search Category ID/Name'
        {{/ifCond}}
      />
    </div>
    <button id='exportCSVButton' class='btn admin__csv__btn'>Export as CSV</button>
  </div>
</div>